{
	"version": 2,

	"configurePresets": [
	{
		"name": "win64static"
		,"displayName": "Windows 64 Static"
		,"description": "Default build using Visual Studio generator"
		,"generator": "Visual Studio 17 2022"
		,"binaryDir": "${sourceDir}/../build/${presetName}"
		,"architecture": "x64"
		,"cacheVariables": {
			"CMAKE_TOOLCHAIN_FILE": "${dollar}<VCPKG_ROOT>/scripts/buildsystems/vcpkg.cmake"
			,"VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
			,"CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>DLL"
			,"SELECTED_PRESET": "${presetName}"
		}
	}
	,{
		"name": "dll_win64static"
		,"inherits": "win64static"
		,"cacheVariables": {
			"ADVVIZDLL":"ON"
			,"CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>DLL"
			,"VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
		}
	}
	,{
		"name": "win64Unreal"
		,"displayName": "Windows 64 Unreal"
		,"description": "Uses cesium-unreal's custom tailored triplet: statically linked, dynamic CRT, Release-only build using Visual Studio generator"
		,"generator": "Visual Studio 17 2022"
		,"binaryDir": "${sourceDir}/../build/${presetName}"
		,"architecture": "x64"
		// Does not work as expected (see Public/Extern/cesium-unreal/extern/vcpkg-overlays/triplets/shared/common.cmake)
		//,"environment": {
		//	"CESIUM_VCPKG_RELEASE_ONLY": "ON"
		//}
		,"cacheVariables": {
			"CMAKE_TOOLCHAIN_FILE": "${dollar}<VCPKG_ROOT>/scripts/buildsystems/vcpkg.cmake"
			,"VCPKG_TARGET_TRIPLET": "x64-windows-unreal-release"
			// Should be simply x64-windows (or left unset), but this leads to building gRPC twice
			// (see its portfile, gRPC build needs itself to be built for the host too), which is LONG!
			// Since we never cross-compile, we don't care to have a different value here as in TARGET:
			,"VCPKG_HOST_TRIPLET": "x64-windows-unreal-release"
			,"CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL"
			,"VIZSDK_BUILD_CONTEXT":"Unreal"
			,"SELECTED_PRESET": "${presetName}"
			// Not preventing vcpkg from building -dbg variants either... :/
			//,"VCPKG_BUILD_TYPE": "Release"
		}
	}
	,{
	  "name": "macosXcodeX64"
      ,"displayName": "mac os Xcode x64"
      ,"description": "Default using xcode"
      ,"generator": "Xcode"
	  ,"binaryDir": "${sourceDir}/../build/${presetName}"
      ,"cacheVariables": {
		"CMAKE_TOOLCHAIN_FILE": "${dollar}<VCPKG_ROOT>/scripts/buildsystems/vcpkg.cmake"
		,"VCPKG_TARGET_TRIPLET": "x64-osx"
		,"VIZSDK_BUILD_CONTEXT":"Unreal"
		,"SELECTED_PRESET": "${presetName}"
      }
    }
	,{
	  "name": "macosXcodeARM"
      ,"displayName": "mac os Xcode ARM"
      ,"description": "Default using xcode ARM"
      ,"generator": "Xcode"
	  ,"binaryDir": "${sourceDir}/../build/${presetName}"
      ,"cacheVariables": {
		  "CMAKE_TOOLCHAIN_FILE": "${dollar}<VCPKG_ROOT>/scripts/buildsystems/vcpkg.cmake"
		  ,"VCPKG_TARGET_TRIPLET": "arm64-osx"
		  ,"VIZSDK_BUILD_CONTEXT":"Unreal"
		  ,"SELECTED_PRESET": "${presetName}"
		  ,"CMAKE_CROSSCOMPILING": "OFF"
      }
    }
	]
}
